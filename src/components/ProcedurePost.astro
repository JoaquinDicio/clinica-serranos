---
const { title, description } = Astro.props;
---

<div class="rounded-[20px] bg-white flex flex-col">
  <img
    class="h-[300px] rounded-[20px] object-cover w-full"
    src="https://epichotelsanluis.com/wp-content/uploads/2022/11/placeholder.png"
    alt=""
  />
  <div class="p-5">
    <h3 class="font-medium text-start text-gray-800 pb-2">{title}</h3>
    <p class="text-gray-800 text-sm text-start pb-4">
      {description}
    </p>
  </div>
</div>
