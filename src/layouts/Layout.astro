---
const {
  title,
  description = "description",
  lang = "es",
  showLegal = true,
} = Astro.props;
import Whatsapp from "../components/Whatsapp.astro";
import LegalAgreement from "../components/Agreements.astro";
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta
      property="og:description"
      content="Sonrie con confianza con nuestra ayuda"
    />
    <meta
      name="keywords"
      content="clÃ­nica dental, Valencia, dentista, limpieza dental, blanqueamiento dental, ortodoncia, implantes dentales, alineadores, rapido, en el dia, tecnologia avanzada"
    />
    <link rel="icon" href="/logo-serranos.png" type="image/x-icon" />

    <!-- swiper css -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
    />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <script
      src="https://kit.fontawesome.com/759a8eedd2.js"
      crossorigin="anonymous"></script>
    <Whatsapp />
    {showLegal && <LegalAgreement />}
  </body>
</html>
<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap");
  * {
    font-family: "Poppins", sans-serif;
    box-sizing: border-box;
    scroll-behavior: smooth;
    padding: 0;
    margin: 0;
  }
  :root {
    --secondary-color: #273047;
    --main-color: #273047;
    --funnel-secondary-color: #1e79fe;
    --funnel-primary-color: #d4efff;
  }
</style>
